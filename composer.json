{
    "name": "halcyon/saas-boilerplate",
    "type": "boilerplate",
    "description": "Halcyon SaaS Boilerplate",
    "license": "proprietary",
    "require": {
        "php": "^8.1.9",
        "composer-runtime-api": "^2.0",
        "artificertech/filament-multi-context": "^2.0",
        "bacon/bacon-qr-code": "^2.0",
        "filament/filament": "^2.16.6",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^9.28",
        "laravel/sanctum": "^3.0",
        "laravel/tinker": "^2.7",
        "pragmarx/google2fa": "^8.0",
        "saade/filament-laravel-log": "^1.1",
        "shuvroroy/filament-spatie-laravel-health": "^1.5",
        "spatie/data-transfer-object": "^3.8",
        "spatie/laravel-json-api-paginate": "^1.12",
        "spatie/laravel-permission": "^5.5.12",
        "spatie/laravel-query-builder": "^5.0",
        "spatie/laravel-queueable-action": "^2.14",
        "spatie/laravel-route-attributes": "^1.11",
        "stancl/tenancy": "^3.6",
        "timacdonald/json-api": "^0.2.1",
        "victord11/ssl-certification-health-check": "^1.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.7",
        "barryvdh/laravel-ide-helper": "^2.12",
        "fakerphp/faker": "^1.9.1",
        "laravel/pint": "^1.2",
        "laravel/sail": "^1.0.1",
        "nunomaduro/collision": "^6.1",
        "nunomaduro/larastan": "^2.1",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-faker": "^1.0",
        "pestphp/pest-plugin-laravel": "^1.2",
        "pestphp/pest-plugin-livewire": "^1.0",
        "pestphp/pest-plugin-mock": "^1.0",
        "phpstan/phpstan": "^1.8",
        "spatie/laravel-ignition": "^1.0",
        "spatie/laravel-ray": "^1.31",
        "spatie/x-ray": "^1.1",
        "worksome/request-factories": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Domain\\": "domain/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan filament:upgrade",
            "@php artisan ide-helper:generate --ansi",
            "@php artisan ide-helper:meta --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "clear-all": [
            "@php artisan optimize:clear --ansi",
            "composer dumpautoload -o"
        ],
        "cache-all": [
            "@php artisan event:cache --ansi",
            "@php artisan view:cache --ansi",
            "@php artisan route:cache --ansi",
            "@php artisan config:cache --ansi",
            "@php artisan view:cache --ansi"
        ],
        "reset": [
            "composer clear-all",
            "composer cache-all"
        ],
        "ide-helper": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "@php artisan ide-helper:generate --ansi",
            "@php artisan ide-helper:meta --ansi",
            "@php artisan ide-helper:models -r -W --ansi"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint",
        "format-dry-run": "vendor/bin/pint --test",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage-html build/coverage",
        "x-ray": "vendor/bin/x-ray app database domain resources routes tests"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.1.9"
        },
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
